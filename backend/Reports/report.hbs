    <title>PDF GENERATOR</title>
    <style>
        html {
            background: white;
        }

        body {
            margin: 0;
            padding: 10px;
            background: white;
        }

        table,
        th {
            border-spacing: 0;
            border-collapse: collapse;
            border: none;
        }

        .box-header {
            background-image: url({{url}}/static/logo.png);
            width: 100%;
            height: 50px;
            background-size: 270px;
            background-color: #008994;
            background-repeat: no-repeat;
            background-position: 12px center;
            border-radius: 5px 5px 0px 0px;
        }

        .ok {
            background-image: url({{url}}/static/ok.svg);
        }

        .good {
            background-image: url({{url}}/static/good.svg);
        }

        .sad {
            background-image: url({{url}}/static/sad.svg);
        }

        .ok.active {
            filter: contrast(61%) sepia(1) hue-rotate(30deg) saturate(9000%);
            opacity: 1;
        }

        .good.active {
            filter: contrast(0%) sepia(1) hue-rotate(13deg) saturate(6000%);
            opacity: 1;
        }

        .sad.active {
            filter: contrast(61%) sepia(1) hue-rotate(7deg) saturate(9000%);
            opacity: 1;
        }

        .smile {
            width: 55px;
            height: 55px;
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
            margin-bottom: 10px;
            margin-top: 10px;
            float: left;
            opacity: 0.1;
        }

        .divSmiles {
            margin: auto;
            height: 100%;
            width: 185px;
        }

        .divSmiles>.good {
            margin-left: 10px;
            margin-right: 10px;
        }

        .photo {
            width: 95%;
            height: 290px;
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center center;
            margin: 14px;
            background-color: #ffffff;
            margin-left: 2.5%;
            margin-right: 2.5%;
            border: solid 1px rgba(0, 0, 0, 0.18823529411764706);
        }

        .box-body {
            width: 100%;
            height: calc(100% - 100px);
            margin-bottom: 1em;
            margin-top: 1em;
        }

        .box-footer {
            width: 100%;
            height: 50px;
            background-color: #008994;
            border-radius: 0px 0px 5px 5px;
        }

        .col {
            display: flex;
            flex-direction: column;
        }

        .row {
            display: flex;
            flex-direction: row;
        }

        .title-Bar {
            background-color: #008994;
            color: white;
            text-align: center;
            padding: 10px;
            margin-top: 0;
        }

        .title-Bar-2 {
            background-color: rgba(107, 107, 107, 0.18823529411764706);
            color: rgba(23, 23, 23, 0.5294117647058824);
            text-align: center;
            padding: 10px;
            font-weight: bold;
        }

        .titleContent {
            font-size: 18px;
            font-weight: bold;
            padding-bottom: 5px;
            color: black;
            text-align: left;
            margin: 0px !important;
        }

        .textContent {
            font-size: 16px;
            font-weight: 600;
            color: rgba(0, 0, 0, 0.5411764705882353);
            margin: 0;
            text-align: left;
        }

        .col-4 {
            width: 33.33333333%;
        }

        .col-6 {
            width: 50%;
        }

        .col-8 {
            width: 66.66666667%;
        }

        .col-12 {
            width: 100%;
        }

        .borUpDownOnly {
            border-top: 1px solid #B3DCDF;
            border-bottom: 1px solid #B3DCDF;
            padding-top: 5px;
            padding-bottom: 5px;
        }

        .borUp {
            border-top: 1px solid #B3DCDF;
            padding-top: 5px;
        }

        .borUpLeftRight {
            border-top: 1px solid #B3DCDF;
            border-left: 1px solid #B3DCDF;
            border-right: 1px solid #B3DCDF;
            padding-top: 5px;
            padding-left: 5px;
            padding-right: 5px;
        }

        .borDown {
            border-bottom: 1px solid #B3DCDF;
            padding-bottom: 5px;
        }

        .borDownLeftRigth {
            border-bottom: 1px solid #B3DCDF;
            border-left: 1px solid #B3DCDF;
            border-right: 1px solid #B3DCDF;
            padding-bottom: 5px;
            padding-left: 5px;
            padding-right: 5px;
        }

        .borUpDownLeftRigth {
            border-top: 1px solid #B3DCDF;
            border-bottom: 1px solid #B3DCDF;
            border-left: 1px solid #B3DCDF;
            border-right: 1px solid #B3DCDF;
            padding-top: 5px;
            padding-bottom: 5px;
            padding-left: 5px;
            padding-right: 5px;
        }

        .borUpDown {
            border-top: 1px solid #B3DCDF;
            border-bottom: 1px solid #B3DCDF;
            padding-top: 5px;
            padding-bottom: 5px;
        }

        .borLeft {
            border-left: 1px solid #B3DCDF;
            padding-left: 5px;
        }

        .borRight {
            border-right: 1px solid #B3DCDF;
        }

        .borRight>font {
            padding-right: 5px;
        }

        .borLeftRight {
            border-left: 1px solid #B3DCDF;
            border-right: 1px solid #B3DCDF;
        }

        .borLeftRight>font {
            padding-left: 5px;
            padding-right: 5px;
